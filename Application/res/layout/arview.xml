<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" >

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:contentDescription="@+strings/btnClose"
        android:onClick="onCloseButtonClick"
        android:src="@drawable/close" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
        <ImageButton
            android:id="@+id/resetPoseButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:contentDescription="@+strings/btnResetPose"
            android:onClick="onResetPoseButtonClick"
            android:src="@drawable/refresh" />
        <ImageButton
            android:id="@+id/resetButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:contentDescription="@+strings/btnReset"
            android:onClick="onResetButtonClick"
            android:src="@drawable/reload" />
        <ImageButton
            android:id="@+id/modelButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:contentDescription="@+strings/btnModel"
            android:onClick="onModelButtonClick"
            android:src="@drawable/pyramid" />
        <ImageButton
            android:id="@+id/toolButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:contentDescription="@+strings/btnTool"
            android:onClick="onToolButtonClick"
            android:src="@drawable/wrench" />
        <ImageButton
            android:id="@+id/aidButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:contentDescription="@+strings/btnAid"
            android:onClick="onAidButtonClick"
            android:src="@drawable/help" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/previousButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:contentDescription="@+strings/btnPrevious"
        android:onClick="onPreviousButtonClick"
        android:src="@drawable/previous" />
    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:contentDescription="@+strings/btnNext"
        android:onClick="onNextButtonClick"
        android:src="@drawable/next" />

</RelativeLayout>